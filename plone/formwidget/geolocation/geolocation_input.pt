<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      i18n:domain="plone.formwidget.geolocation"
      tal:omit-tag="">
  <div class="geolocation_wrapper edit">
    <script type="text/javascript">
    $(document).ready(function() {
        $('.geolocation_wrapper.edit').trigger('geowidget:init');
    })
    </script>
    <input class="map-search-input" type="text"
           placeholder="Search for a place" style="display:none"
           i18n:attributes="placeholder"/>
    <div class="geolocation"
        tal:attributes="data-latitude python:view.value[0];
                        data-longitude python:view.value[1];
                        data-zoom python:view.value[2];" />
    <input id="" name="" class="" style="" value="" type="text"
        tal:attributes="id string:${view/id}_latitude;
                        name string:${view/name}:tuple;
                        class string:${view/klass} latitude;
                        style view/style;
                        value python:view.value[0]" />
    <input id="" name="" class="" style="" value="" type="text"
        tal:attributes="id string:${view/id}_longitude;
                        name string:${view/name}:tuple;
                        class string:${view/klass} longitude;
                        style view/style;
                        value python:view.value[1]" />
    <input id="" name="" class="" value="" type="hidden"
        tal:attributes="id string:${view/id}_zoom;
                        name string:${view/name}:tuple;
                        style view/style;
                        class string:${view/klass} zoom;
                        value python:view.value[2]" />
    <div class="infowindow-content">
      <img src="" width="16" height="16" id="place-icon">
      <span id="place-name"  class="title"></span><br>
      <span id="place-address"></span>
    </div>
  </div>
</html>
