<registry>

  <record name="plone.formwidget.geolocation.default_location">
    <field type="plone.registry.field.Dict">
      <title>Default location</title>
      <key_type type="plone.registry.field.TextLine" />
      <value_type type="plone.registry.field.TextLine" />
    </field>
    <value>
      <element key="lat">44.4968969</element>
      <element key="lng">11.3480349</element>
      <element key="zoom">12</element>
    </value>
  </record>

  <record name="plone.formwidget.geolocation.api_key">
    <field type="plone.registry.field.TextLine">
      <title>Google maps API key</title>
    </field>
    <value></value>
  </record>

  <!-- resource registry -->
  <records prefix="plone.resources/async" interface='Products.CMFPlone.interfaces.IResourceRegistry'>
    <value key="js">++resource++plone.formwidget.geolocation/async.js</value>
  </records>
  <records prefix="plone.resources/plone.formwidget.geolocation" interface='Products.CMFPlone.interfaces.IResourceRegistry'>
    <value key="js">++resource++plone.formwidget.geolocation/plone.formwidget.geolocation.js</value>
    <value key="css">
      <element>++resource++plone.formwidget.geolocation/plone.formwidget.geolocation.css</element>
    </value>
  </records>

  <!-- BUNDLES -->
  <records prefix="plone.bundles/plone-formwidget-geolocation"
            interface='Products.CMFPlone.interfaces.IBundleRegistry'>
    <value key="enabled">True</value>
    <value key="resources" purge="true">
      <element>plone.formwidget.geolocation</element>
    </value>
    <value key="jscompilation">++resource++plone.formwidget.geolocation/compiled-plone-formwidget-geolocation.js</value>
    <value key="csscompilation">++resource++plone.formwidget.geolocation/compiled-plone-formwidget-geolocation.css</value>
    <value key="compile">True</value>
    <value key="depends">plone</value>
    <value key="merge_with">default</value>
    <value key="stub_js_modules">
      <element>jquery</element>
    </value>
  </records>

</registry>
